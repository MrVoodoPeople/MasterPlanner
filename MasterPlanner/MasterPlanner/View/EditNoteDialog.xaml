<Window x:Class="MasterPlanner.View.EditNoteDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MasterPlanner.View"
        mc:Ignorable="d"
        Title="EditNoteDialog" Height="200" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <TextBox x:Name="noteTextBox" Grid.Row="0" TextWrapping="Wrap" Margin="0,0,0,10"/>
            <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center">
            <Button x:Name="saveButton" Content="Сохранить" Margin="0,0,10,0" Click="SaveButton_Click"/>
            <Button x:Name="cancelButton" Content="Отмена" Margin="0,0,10,0" Click="CancelButton_Click"/>
        </StackPanel>
    </Grid>
    
</Window>
